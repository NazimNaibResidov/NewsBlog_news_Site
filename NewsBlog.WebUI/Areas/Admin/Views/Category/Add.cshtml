@model AddCategoryDTO
<div class="row-fluid">
    <div class="span12 widget">
        <h2 class="widget-heading">Category Add</h2>

        <form id="form-wizard2" method="post" asp-area="Admin" asp-action="Add" asp-controller="Category" class="bbq ui-formwizard ui-helper-reset ui-widget ui-widget-content ui-corner-all" novalidate="novalidate">

            <fieldset class="step ui-formwizard-content ui-helper-reset ui-corner-all" id="w2first" style="display: block;">
                <div class="form-line">
                    <div class="row-fluid">
                        <div class="span3">
                            <label>Name:</label>
                        </div>
                        <div class="span9">
                            <input type="text" class="simple_input ui-wizard-content ui-helper-reset ui-state-default" asp-for="Name">
                        </div>
                    </div>
                </div>

                <div class="form-line">
                    <div class="row-fluid">
                        <div class="span3">
                            <label>Description:</label>
                        </div>
                        <div class="span9">
                            <input type="text" class="simple_input ui-wizard-content ui-helper-reset ui-state-default" asp-for="Description" >
                        </div>
                    </div>
                </div>


            </fieldset>



            <div class="form-line">
                <div class="status" id="status2"></div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="floatR">

                            <input class="btn btn-inverse ui-wizard-content ui-formwizard-button ui-helper-reset ui-state-default ui-state-active" id="next" value="Save" type="submit">
                        </div>
                    </div>
                </div>
            </div>

            <div class="data" id="success2"></div>
        </form>

    </div>
</div>